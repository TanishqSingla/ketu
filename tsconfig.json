{
	"compilerOptions": {
		"target": "ES2020",
		"module": "ESNext",
		"moduleResolution": "bundler",
		"allowJs": true,
		"checkJs": true,
		"noImplicitAny": true,
		"strict": true,
		"declaration": true,
		"emitDeclarationOnly": true,
		/* Preact Config */
		"jsx": "react-jsx",
		"jsxImportSource": "preact",
		"skipLibCheck": true,
		"baseUrl": ".",
		"declarationDir": "dist"
	},
	"exclude": [
		"vite.config.js",
		"dist",
		"node_modules"
	]
}
