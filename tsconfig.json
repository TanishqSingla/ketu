{
	"compilerOptions": {
		"target": "ES2020",
		"module": "ESNext",
		"moduleResolution": "bundler",
		"allowJs": true,
		"checkJs": true,
		"noImplicitAny": true,
		"strict": true,
		"declaration": true,
		"emitDeclarationOnly": true,

		/* Preact Config */
		"jsx": "react-jsx",
		"jsxImportSource": "preact",
		"skipLibCheck": true,
		"paths": {
			"@src/*": [
				"./src/*"
			]
		},
		"outDir": "dist"
	},
	"include": [
		"./src/**/*"
	]
}
